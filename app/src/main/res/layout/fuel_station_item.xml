<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/combustible_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Hola soy la gasolina"
            android:textColor="@color/title"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/precio_producto_combo_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/combustible_nombre"
            android:text="Valor del galon: $" />

        <TextView
            android:id="@+id/combustible_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/precio_producto_combo_label"
            android:layout_alignBottom="@+id/precio_producto_combo_label"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="1dp"
            android:text="15"
            android:textColor="@color/title"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
